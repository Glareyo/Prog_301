<Window x:Class="SportsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="bSports" Content="Sports" HorizontalAlignment="Left" Margin="37,98,0,0" VerticalAlignment="Top" Height="68" Width="130"/>
        <Button x:Name="bPlayers" Content="Players" HorizontalAlignment="Left" Margin="37,192,0,0" VerticalAlignment="Top" Height="68" Width="130" Click="bPlayers_Click" MouseEnter="bPlayers_MouseEnter"/>
        <Button x:Name="bTeams" Content="Teams" HorizontalAlignment="Left" Margin="37,283,0,0" VerticalAlignment="Top" Height="68" Width="130" Click="bPlayers_Click" MouseEnter="bTeams_MouseEnter"/>
        <Frame x:Name="F_Main" Content="" NavigationUIVisibility="Hidden" Navigated="F_Main_Navigated"/>
    </Grid>
</Window>
