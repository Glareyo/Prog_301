<UserControl x:Class="SportsWPF.UserControls.ucPlayerDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SportsWPF.UserControls"
             mc:Ignorable="d" Height="46" Width="269">
    <Grid>
        <TextBlock x:Name="t_playerNumber" TextWrapping="Wrap" Height="46" Width="132" Background="#FFB5B5B5" TextAlignment="Center" Text="{Binding Number}" HorizontalAlignment="Left" Canvas.Left="136" VerticalAlignment="Top" Margin="137,0,0,0"/>
        <TextBlock x:Name="t_playerName" TextWrapping="Wrap" Height="46" Width="132" Background="#FFB5B5B5" TextAlignment="Center" Text="{Binding Name}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
