<UserControl x:Class="Sprint6.Views.MammlControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sprint6.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label>This is the Mammal Contol</Label>
            <StackPanel Orientation="Horizontal">
                <Label>Name:</Label>
                <TextBox x:Name="tbDogName" Text="{Binding Path=Name}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Age:</Label>
                <TextBox x:Name="tbDogAge" Text="{Binding Path=Age}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Weight:</Label>
                <TextBox x:Name="tbDogWeight" Text="{Binding Path=Weight}"></TextBox>
            </StackPanel>
        </StackPanel>
            
    </Grid>
</UserControl>
